<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
  <ThingDef ParentName="BuildingBase">
    <defName>CoalCrematorium</defName>
    <label>coal crematorium</label>
    <description>A huge stone crematorium which vaporizes corpses with extremely high temperatures. Burns coal and charcoal.</description>
    <thingClass>Building_WorkTable_HeatPush</thingClass>
    <graphicData>
      <texPath>CoalCrematorium/Crematorium</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(3,2)</drawSize>
      <shadowData>
        <volume>(1.95,0.5,1.3)</volume>
      </shadowData>
      <damageData>
        <rect>(0.3,0.1,2.4,1.8)</rect>
      </damageData>
    </graphicData>
    <stuffCategories>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>150</costStuffCount>
    <costList>
      <Steel>40</Steel>
    </costList>
    <tickerType>Normal</tickerType>
    <altitudeLayer>Building</altitudeLayer>
    <useHitPoints>True</useHitPoints>
    <statBases>
      <WorkToBuild>4500</WorkToBuild>
      <MaxHitPoints>300</MaxHitPoints>
      <Cleanliness>-20</Cleanliness>
      <Beauty>-10</Beauty>
    </statBases>
    <size>(3,2)</size>
    <designationCategory>Production</designationCategory>
    <fillPercent>1</fillPercent>
    <passability>Impassable</passability>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <interactionCellIcon>DiningChair</interactionCellIcon>
    <surfaceType>Item</surfaceType>
    <canOverlapZones>false</canOverlapZones>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <constructionSkillPrerequisite>4</constructionSkillPrerequisite>
    <recipes>
      <li>CremateCorpse</li>
      <li>BurnApparel</li>
      <li>BurnDrugs</li>
    </recipes>
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
    <comps>
      <li Class="CompProperties_Refuelable">
        <fuelCapacity>100</fuelCapacity>
        <fuelConsumptionRate>3.0</fuelConsumptionRate>
        <fuelFilter>
          <thingDefs>
            <li>Coal</li>
            <li>Charcoal</li>
          </thingDefs>
        </fuelFilter>
        <consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
        <initialFuelPercent>0</initialFuelPercent>
        <autoRefuelPercent>0.33</autoRefuelPercent>
        <showFuelGizmo>true</showFuelGizmo>
        <drawOutOfFuelOverlay>false</drawOutOfFuelOverlay>
        <drawFuelGaugeInMap>false</drawFuelGaugeInMap>
      </li>
      <li Class="CompProperties_Glower">
        <glowRadius>6</glowRadius>
        <glowColor>(255,202,33,0)</glowColor>
      </li>
      <li Class="CompProperties_HeatPusher">
        <compClass>CompHeatPusherPowered</compClass>
        <heatPerSecond>12</heatPerSecond>
      </li>
    </comps>
    <building>
      <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
      <heatPerTickWhileWorking>0.32</heatPerTickWhileWorking>
    </building>
    <researchPrerequisites>
      <li>Research_NECCoalProduction</li>
    </researchPrerequisites>
    <placeWorkers>
      <li>PlaceWorker_ReportWorkSpeedPenalties</li>
      <li>PlaceWorker_PreventInteractionSpotOverlap</li>
    </placeWorkers>
  </ThingDef>
  
