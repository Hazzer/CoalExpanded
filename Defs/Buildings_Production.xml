  <ThingDef ParentName="BuildingBase">
    <defName>NECCoalLamp</defName>
    <label>coal brazier</label>
    <description>A steel lamp for lighting an area, better than a torch. People need light to move and work at full speed. Can be automatically refueled with coal and charcoal. Produces a small amount of heat.</description>
    <category>Building</category>
    <graphicData>
      <texPath>CoalLamp</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawRotated>false</drawRotated>
      <damageData>
        <rect>(0.35,0.35,0.3,0.3)</rect>
      </damageData>
    </graphicData>
    <uiIconPath>CoalLamp_MenuIcon</uiIconPath>
    <uiIconScale>0.85</uiIconScale>
    <rotatable>false</rotatable>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <pathCost>8</pathCost>
    <constructEffect>ConstructMetal</constructEffect>
    <tickerType>Normal</tickerType>
    <drawerType>RealtimeOnly</drawerType>
    <fillPercent>0.15</fillPercent>
    <statBases>
      <MaxHitPoints>50</MaxHitPoints>
      <WorkToBuild>240</WorkToBuild>
      <Flammability>0.1</Flammability>
    </statBases>
    <selectable>true</selectable>
    <costList>
      <Steel>35</Steel>
    </costList>
    <soundImpactDefault>BulletImpact_Ground</soundImpactDefault>
    <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
    <placeWorkers>
      <li>PlaceWorker_Heater</li>
    </placeWorkers>
    <drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
    <comps>
      <li Class="CompProperties_Refuelable">
        <fuelCapacity>15</fuelCapacity>
        <fuelConsumptionRate>0.8</fuelConsumptionRate>
        <fuelFilter>
          <thingDefs>
            <li>Coal</li>
            <li>Charcoal</li>
          </thingDefs>
        </fuelFilter>
        <consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
        <initialFuelPercent>0</initialFuelPercent>
        <autoRefuelPercent>0.33</autoRefuelPercent>
        <showFuelGizmo>true</showFuelGizmo>
        <drawOutOfFuelOverlay>false</drawOutOfFuelOverlay>
        <drawFuelGaugeInMap>false</drawFuelGaugeInMap>
      </li>
      <li Class="CompProperties_Glower">
        <glowRadius>8</glowRadius>
        <glowColor>(252,187,113,0)</glowColor>
      </li>
      <li Class="CompProperties_HeatPusher">
        <compClass>CompHeatPusherPowered</compClass>
        <heatPerSecond>2</heatPerSecond>
        <heatPushMaxTemperature>18</heatPushMaxTemperature>
      </li>
      <li Class="CompProperties_FireOverlay">
        <fireSize>0.4</fireSize>
        <offset>(0,0,0)</offset>
      </li>
      <li Class="CompProperties_Flickable"/>
    </comps>
    <designationCategory>Furniture</designationCategory>
  </ThingDef>

  <ThingDef ParentName="BuildingBase">
    <defName>NECActiveCooler</defName>
    <label>active cooler</label>
    <description>Heats up liquid in a vacuum, the resulting gas absorbs heat and creates ice. Cools the room enough to keep spoilables fresh, but not frozen. Requires coal or charcoal refueling.</description>
    <thingClass>Building_Cooler</thingClass>
    <graphicData>
      <texPath>ActiveCooler</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawRotated>false</drawRotated>
      <allowFlip>false</allowFlip>
      <shadowData>
        <volume>(0.9,0.3,0.9)</volume>
      </shadowData>
      <damageData>
        <rect>(0.2,0,0.6,0.1)</rect>
      </damageData>
    </graphicData>
    <rotatable>false</rotatable>
    <minifiedDef>MinifiedThing</minifiedDef>
    <thingCategories>
      <li>Buildings</li>
    </thingCategories>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <constructEffect>ConstructDirt</constructEffect>
    <tickerType>Normal</tickerType>
    <drawerType>RealtimeOnly</drawerType>
    <fillPercent>0.4</fillPercent>
    <statBases>
      <WorkToBuild>1600</WorkToBuild>
      <MaxHitPoints>100</MaxHitPoints>
      <Flammability>0.7</Flammability>
      <Mass>25</Mass>
    </statBases>
    <costList>
      <WoodLog>50</WoodLog>
      <Steel>15</Steel>
      <ComponentIndustrial>1</ComponentIndustrial>
    </costList>
    <placeWorkers>
      <li>PlaceWorker_CoolerSimple</li>
    </placeWorkers>
    <drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
    <comps>
      <li Class="CompProperties_HeatPusher">
        <compClass>CompHeatPusherPowered</compClass>
        <heatPerSecond>-21</heatPerSecond>
        <heatPushMinTemperature>2</heatPushMinTemperature>
      </li>
      <li Class="CompProperties_Refuelable">
        <fuelCapacity>40</fuelCapacity>
        <fuelConsumptionRate>3</fuelConsumptionRate>
        <fuelFilter>
          <thingDefs>
            <li>Coal</li>
            <li>Charcoal</li>
          </thingDefs>
        </fuelFilter>
        <consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
        <initialFuelPercent>0</initialFuelPercent>
        <autoRefuelPercent>0.33</autoRefuelPercent>
        <showFuelGizmo>true</showFuelGizmo>
        <drawOutOfFuelOverlay>false</drawOutOfFuelOverlay>
        <drawFuelGaugeInMap>false</drawFuelGaugeInMap>
      </li>
      <li Class="CompProperties_Flickable"/>
    </comps>
    <designationCategory>Temperature</designationCategory>
    <researchPrerequisites>
      <li>PassiveCooler</li>
    </researchPrerequisites>
    <constructionSkillPrerequisite>5</constructionSkillPrerequisite>
  </ThingDef>

