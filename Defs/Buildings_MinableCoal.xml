<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!--================================ Coal Ore ======================================-->
	
  <ThingDef ParentName="RockBase">
    <defName>MineableCoal</defName>
    <label>coal ore</label>
    <description>Rock containing chunks of coal.</description>
    <graphicData>
      <texPath>Things/Building/Linked/RockFlecked_Atlas</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <color>(114,114,114)</color>
      <colorTwo>(30,30,30)</colorTwo>
    </graphicData>
    <statBases>
      <MaxHitPoints>1500</MaxHitPoints>
    </statBases>
    <building>
      <isResourceRock>true</isResourceRock>
      <mineableThing>Coal</mineableThing>
      <mineableYield>45</mineableYield>
      <mineableScatterCommonality>0.75</mineableScatterCommonality>
      <mineableScatterLumpSizeRange>
        <min>8</min>
        <max>16</max>
      </mineableScatterLumpSizeRange>
    </building>
  </ThingDef>

</Defs> 